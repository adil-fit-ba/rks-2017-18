<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent">


  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context=".fragments.PosiljkaAdd1Fragment"
      android:orientation="vertical"
      android:padding="@dimen/paddingLayout"
      >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ime"
        android:layout_alignParentTop="true"
        android:textColor="@color/primary"
        android:id="@+id/viewIme"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:id="@+id/txtIme"
        android:layout_below="@id/viewIme"
        android:text=""
        />

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="48dp"
        android:layout_height="48dp"
android:layout_alignParentRight="true"
        android:background="@drawable/edittext_border"
        app:srcCompat="@drawable/ic_user_silhouette" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresa"
        android:layout_below="@id/txtIme"
android:id="@+id/viewAdresa"
        android:textColor="@color/primary"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAdresa"
        android:enabled="false"
        android:layout_below="@+id/viewAdresa"
        android:text=""
        />


    <Button
        android:id="@+id/btnDalje"
        android:layout_marginTop="@dimen/marginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:layout_below="@+id/txtAdresa"
        android:text="Dalje" />


  </RelativeLayout>
</ScrollView>
